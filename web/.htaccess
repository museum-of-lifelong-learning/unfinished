# Cache SVG figures for 1 year (immutable content)
<FilesMatch "\.(svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Cache JavaScript and CSS for 1 week
<FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=604800"
</FilesMatch>

# Enable compression for SVG, JS, CSS, HTML
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript image/svg+xml
</IfModule>

# Enable gzip compression
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_item_include file \.(html|css|js|svg)$
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_include mime ^application/javascript$
    mod_gzip_item_include mime ^image/svg+xml$
</IfModule>
